#include <iostream>
#include <string>
#include <algorithm>
#include <cctype>
using namespace std; 

void Increment();

char cipher[26][26];
char alphabet[] = "ABCDEFGHIJKLMNOPQRSTUVWXYZ";
string message;
string key;

int main(){
    int row;
    int col;
    int letter;
    
    for(row = 0 ; row < 26; row++){
        letter = 0;
        for(col = 0 ; col < 26; col++ ){
            cipher[row][col] = alphabet[letter];
            letter++;
        //    cout << cipher[row][col];
        }
        Increment();
      //  cout << "\n";
    }

    cout << "Enter the message you would like to Encrypt: ";
    cin >> message;
    cout << "Enter what key you will be using: ";
    cin >> key;  

    int l = message.length();
    
    int messageIndex[l];
    
    transform(message.begin(), message.end(), message.begin(), ::toupper);
    transform(key.begin(), key.end(), key.begin(), ::toupper);

    for (int i = 0; i < l; ++i){
        char lett = message.at(i);
        
        int index = -1;
        for (int j = 0; j < 26; ++j) {
            if (alphabet[j] == lett) {
                messageIndex[i] = j;
                break;
            }
        }
    }

    cout << message << endl;
    cout << key << endl;
    
    for (int i = 0; i < l; ++i){
        cout << messageIndex[i];
    }

   return 0;
}

void Increment(){
    char temp;
    temp = alphabet[0];

    for(int i = 0; i < 25; i++){
        alphabet[i] = alphabet[i + 1];
    }

    alphabet[25] = temp;
}
